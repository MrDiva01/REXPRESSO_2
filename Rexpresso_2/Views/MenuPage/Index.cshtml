.menu-item-price {
    color: #ffd700;
    font-weight: bold;
}

.quantity-and-cart {
    display: flex;
    align-items: center;
}

.quantity-input {
    width: 50px;
    margin-right: 10px;
    padding: 5px;
}

.add-to-cart-button {
    background-color: #3c2a04; 
    color: #ffffff; /* White text for button */
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.add-to-cart-button:hover {
    background-color: #e6bb00; /* Darker shade of gold on hover */
}
</style>

